<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/widget_parent"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#5c6bc0"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:textStyle="bold">
        </TextView>

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/widget_list_view"
                android:background="@color/colorWidgetBackground"
                android:divider="@color/colorWidgetBackground"/>

        <!--<TextView-->
        <!--android:id="@+id/widget_view_filler"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/colorWidgetBackground"/>-->

    </LinearLayout>

    <ImageView
            android:layout_alignBottom="@+id/widget_parent"
            android:layout_alignRight="@+id/widget_parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_assignment_black_24dp"/>

    <ImageView
            android:id="@+id/widget_shortcut"
            android:layout_alignBottom="@+id/widget_parent"
            android:layout_alignRight="@+id/widget_parent"
            android:layout_width="80dp"
            android:layout_height="80dp"/>


</RelativeLayout>


